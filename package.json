{
    "name": "code-cg",
    "displayName": "Code CG",
    "description": "A Microsoft Visual Studio Code extention for animation, vfx and gaming softwares.",
    "version": "0.0.1",
    "publisher": "cg-cnu",
    "author": {
        "name": "Sreenivas Alapati",
        "email": "sreenivas9alapati@gmail.com"
    },
    "icon": "images/icon.png",
    "bugs":{
        "url": "link to github"
    },
    "homepage": "link to github",
    "keywords": [
        "python",
        "mel",
        "autodesk",
        "maya",
        "foundry",
        "mari",
        "cg",
        "computer graphics",
        "animation",
        "vfx",
        "gaming"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "my github repo link"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sendToMaya",
        "onCommand:extension.sendToMari"
    ],
    "main": "./extension",
    "contributes": {
        "languages": [
            {
                "id": "mel",
                "extensions": [
                    ".mel"
                ],
                "aliases": [
                    "MEL",
                    "Mel",
                    "mel"
                ],
                "configuration": "./mel.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mel",
                "scopeName": "source.mel",
                "path": "./syntaxes/MEL.plist"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Cg Configuration",
            "properties": {
                "cg.host":  {
                    "description": "Global host name",
                    "type": "string",
                    "default": "localhost"
                },
                "cg.softwares": {
                    "description": "All the integrated softwares: maya, mari",
                    "type": "array",
                    "default": ["maya", "mari"]
                },
                "maya.languages": {
                    "description": "Maya command port language : portNumber",
                    "type": "object",
                    "default": { "python": 7001, "mel": 7002 }
                },
                "mari.languages":    {
                    "description": "Mari command port type : number",
                    "type": "object",
                    "default": {"python": 6100}
                }
            }
        },
        "commands": [{
            "command": "extension.sendToMaya",
            "title": "Maya",
            "icon": "images/maya.png"
        },{
            "command": "extension.sendToMari",
            "title": "Mari",
            "icon": "images/mari.png"
        }]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "vscode": "^0.11.0"
    }
}
